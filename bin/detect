#!/bin/bash

if [ -f $1/init.r ] || [ -f $1/init.R ]; then
  echo "R" && exit 0
else if [ -f $1/Aptfile ]; then
  echo "Apt" && exit 0
else if [ -f "$1/Gemfile" ]; then
  SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
  echo "ruby $(cat $SCRIPT_DIR/../VERSION)"
  exit 0
else
  echo "no" && exit 1
fi
