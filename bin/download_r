#!/usr/bin/env ruby

require 'open3'

# sync output
#$stdout.sync = true

buildpack_dir = ARGV[0]
stdout, stderr, status = Open3.capture3("#{buildpack_dir}/compile-extensions/bin/download_dependency_by_name", "R", "3.1.0", "r_binaries.tar.gz") 
if status.exitstatus != 0
  puts "download_dependency_by_name script failed: #{stdout} \n====\n #{stderr}"
  exit 1
end